<a href="/">Back to Home</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{blog.title}}</h1>
    <p>{{blog.description}}</p>
    <p><a href="/blogs/{{blog._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/blogs/{{blog._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>

    <hr>

    <!-- Comment form -->
    {{> comment-form}}
    <hr>

    <!-- Show Comments -->
    {{#each comments}}
      {{> comment}}
    {{/each}}

  </div>
</div>
